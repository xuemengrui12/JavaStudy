<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans 
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/aop
       http://www.springframework.org/schema/aop/spring-aop-3.0.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <aop:aspectj-autoproxy/>
    <context:component-scan base-package="com.spring.annotation">
        <context:include-filter type="assignable" expression="com.spring.annotation.TestBean14"/>
        <context:include-filter type="annotation" expression="org.aspectj.lang.annotation.Aspect"/>
        <context:include-filter type="regex" expression="com\.spring\.annotation\.TestBean2*"/>
        <context:exclude-filter type="regex" expression="com\.spring\.annotation\.TestBean2*"/>
        <context:exclude-filter type="aspectj" expression="com.spring.annotation.TestBean3*"/>
    </context:component-scan>


</beans>


